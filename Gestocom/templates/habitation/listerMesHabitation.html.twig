{% extends '/base.html.twig' %}

{% block title %}Mes habitations{% endblock %}

{% block body %}
<div class="row">
	<div class="col-sm">

		<h3 class="text-center"> Liste des habitations</h3>

		<table class="table">
			<tr>
				<th>Adresse</th>
				<th>Code postal</th>
				<th>Ville</th>
			</tr>
			
			{% for habitation in listeHabitation %}
			<tr>
				<td> <a href="{{ path('consulterMonHabitation',{'id':habitation.id}) }}" >{% if habitation.adresse is defined %} {{habitation.adresse}}  {% endif %} </td>
				<td> {% if habitation.copos is defined %} {{habitation.copos}}  {% endif %} </td>
				<td> {% if habitation.ville is defined %} {{habitation.ville}}  {% endif %} </td>
			</tr>


			{% endfor %}
		</table>

	</div>
</div>

{% endblock %}

