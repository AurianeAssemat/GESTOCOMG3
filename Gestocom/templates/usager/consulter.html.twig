{% extends 'base.html.twig' %}


{% block body %}
		
		<h3>L'usager</h3>

  <table class="table">
	<tr><th>Nom : </th><td>{{usager.nom}}<td></tr>
	<tr><th>Prenom : </th><td>{{usager.prenom}}</td>
	<tr><th>Adresse : </th><td>{{usager.adresse}}<td></tr>
	<tr><th>Code Postal : </th><td>{{usager.copos}}</td>
	<tr><th>Ville : </th><td>{{usager.ville}}<td></tr>
	<tr><th>Mail : </th><td>{{usager.mail}}</td>
	<tr><th>Téléphone : </th><td>{{usager.tel}}<td></tr>
	<tr></tr>
    <tr><th>Login : </th><td>{{usager.compte.login}} </td></tr>
	<tr><td><a href="{{ path('reinitMdpCompte', { 'id': usager.compte.id }) }}">Réinitialiser le mot de passe</a></td></tr>
	<tr></tr>
	<tr><th>Archivé :</th>
	<td>
	{% if usager.archive == true %} Oui 
	{% else %} Non 
	{% endif %}
	</td></tr>
	
	
	<tr><td><a href="{{ path('modifierUsager', { 'id': usager.id }) }}">Modifier</a></td></tr>
	
	</table>
	
	
	<a href="{{ path('listerUsager') }}">Retour à la liste des usagers</a>
	
{% endblock %}