	<tr><th>Volume : </th><td>{{container.volume}}</td>
	<tr><th>Poids brut : </th><td>{{container.poidsBrut}}<td></tr>
	<tr><th>Charge utile : </th><td>{{container.chargeUtile}}</td>
	<tr></tr>
	<tr><th>Levées :</th><td><a href="{{ path('listerContainerLevees', { 'id': container.id }) }}">Consulter les levées</a></td></tr>
	<tr></tr>
	<tr><td><a href="{{ path('modifierContainer', { 'id': container.id }) }}">Modifier</a></td></tr>
	
	</table>
	
	<a href="{{ path('listerContainer') }}">Retour à la liste des conteneurs</a>
	
{% endblock %}