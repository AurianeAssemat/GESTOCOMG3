{% extends 'base.html.twig' %}


{% block body %}
		
		<h3>Le conteneur</h3>

  <table class="table">
	<tr><th>Usager associé : </th><td>{{container.habitation.usager.nom}} {{container.habitation.usager.prenom}}<td></tr>
	<tr><th>Habitation : </th><td>{{container.habitation.adresse}} {{container.habitation.copos}} {{container.habitation.ville}}</td>
