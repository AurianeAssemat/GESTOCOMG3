				<p>Fax : 02 31 23 48 83</p>
				<p>Email :</p>
				<p>smictomdelabruyere@gmail.com</p>
			</div>
		</div>
		
		<div class="row">
			<div class="col-sm">
				<p><b>M. Charles DELTOUR</b></p>
				<p>4, rue du pont</p>
				<p>Le Bourg</p>
				<p>14 680 Bretteville Sur Laize</p>
			</div>
		</div>
		
		<div class="row">
			<div class="col-sm" border="1px solid black">
				<p><h1>FACTURE DU MOIS DE {{month|upper}} {{year}}</h1></p>
				<p>Habitation numéro {{levees[0].container.habitation.id}}</p>
				<p>{{levees[0].container.habitation.adresse}}</p>
				<p>{{levees[0].container.habitation.copos}} {{levees[0].container.habitation.ville}}</p>
			</div>
		</div>
		
		<div class="row">
			<div class="col-sm">
				<table class="table">
					<tr>
						<th>Date levée</th>
						<th>Numéro container</th>
						<th>Type déchet</th>
						<th>Poids</th>
						<th>Tarif</th>
						<th>Montant levée</th>
					</tr>
					
					{% for levee in levees %}
					<tr>
						<td>{{levee.dateLevee|date("Y/m/d H:i:s")}}</td>
						<td>{{levee.container.id}}</td>
						<td>{{levee.container.typeDechet.libelle}}</td>
						<td>{{levee.poids}}</td>
						<td>{{levee.container.typeDechet.tarifDate(levee.dateLevee).tarif}}</td>
						<td>{{levee.poids * levee.container.typeDechet.tarifDate(levee.dateLevee).tarif}}€</td>
					</tr>
					{% endfor %}
					
					<tr>
						<th>Total</th>
						<td>{{sum}}€</td>
				</table>
			</div>
		</div>
	
		<script type="text/javascript" src="{{ asset("js/popper.min.js") }}"></script>
